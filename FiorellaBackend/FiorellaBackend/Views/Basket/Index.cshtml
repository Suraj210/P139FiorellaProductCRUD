@model List<BasketDetailVM>
@{
    ViewData["Title"] = "Index";
}


<div class="container">

    @if(Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            Basket is empty!
        </div>
    }
    else
    {
        
        <div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Name
                </th>
                <th>
                  Description
                </th>
                    <th>
                        Category
                    </th>
                <th>
                    Price
                </th>
                <th>
                   Count
               </th>
                <th>
                  Total 
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
          {
                    
            <tr>
                <td class="py-1" style="width:100px; height:100px">
                    <img style="width:100%" src="~/img/@item.Image" alt="image" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Category

                </td>
                <td>
                    @item.Price
                </td>
                <td>
              
                    @item.Count
                </td>

                 <td>

                     @item.Total
                 </td>

            </tr>
          }
        </tbody>
    </table>
</div>
    }

</div>






