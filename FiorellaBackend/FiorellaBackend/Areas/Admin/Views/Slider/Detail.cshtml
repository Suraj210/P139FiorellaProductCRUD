@model SliderImg
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">

    <img style="width:70%; height:30%" src="~/img/@Model.Img" />

    @if (Model.Status)
    {

        <div class="status-on" style="width:20px; height:20px; border-radius:50%; background-color:green; cursor:pointer;"></div>
    }
    else
    {
        <div class="status-off" style="width:20px; height:20px; border-radius:50%; background-color:red; cursor:pointer;"></div>
    }


    <a class="btn btn-outline-info mt-3" asp-action="Index">Back</a>
</div>

