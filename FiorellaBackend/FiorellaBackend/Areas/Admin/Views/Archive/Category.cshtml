@model List<ArchiveCategory>
@{
    ViewData["Title"] = "Category";
}

<div class="container">

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var category in Model)
                {
                    <tr>

                        <td>
                            @category.Name
                        </td>

                        <td>                         
                            <form class="d-inline-block" method="post" asp-action="Extract" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-outline-danger">Extract</button>
                            </form>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

